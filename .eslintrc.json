{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "rules": {
    "camelcase": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "operator-linebreak": 0,
    "implicit-arrow-linebreak": 0,
    "no-restricted-syntax": 0,
    "no-await-in-loop": 0,
    "no-underscore-dangle": 0,
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ]
  },
  "globals": {
    "log": true,
    "redisClient": true
  }
}
